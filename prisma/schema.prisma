generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  schemas  = ["absence"]
}

model User {
  id           String   @id @default(uuid()) @db.Uuid
  nama         String
  email        String   @unique
  foto         String?
  posisi       String
  noHp         String   @map("no_hp")

  absenses Absense[]

  @@map("users")
  @@schema("absence")
}

model Absense {
  id             String    @id @default(uuid()) @db.Uuid
  login  DateTime  @map("login")
  logout DateTime? @map("logout")

  userId String    @db.Uuid @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("absenses")
  @@schema("absence")
}